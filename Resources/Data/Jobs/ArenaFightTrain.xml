<!DOCTYPE Job SYSTEM "job.dtd">
<Job ShortName="CT">
    <Description>
        She will practice combat.
    </Description>

    <Config DefaultImage="Combat" FightingJob="1" BaseWages="20">
        <Filter>ArenaFight</Filter>
        <Enjoyment PrimaryAction="Fighting" SecondaryAction="Physical"/>
        <Obedience Difficulty="10" Fear="25" />
    </Config>

    <Performance />

    <Messages>
        <Message Name="refuse">
            <Text>${name} refused to work during the ${shift} shift.</Text>
        </Message>
        <Message Name="work">
            <Text>${name} trains for combat.</Text>
        </Message>
    </Messages>
</Job>
