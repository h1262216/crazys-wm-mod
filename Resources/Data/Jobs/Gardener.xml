<!DOCTYPE Job SYSTEM "job.dtd">
<Job ShortName="Grdn">
    <Description>
        She will produce herbs.
    </Description>

    <Performance>
        <Factor Skill="Herbalism"/>
        <Factor Skill="Farming" />
        <Factor Stat="Constitution" />
        <Factor Stat="Intelligence" />

        <!-- good traits -->
        <Trait Name="Quick Learner" Value="5"/>
        <Trait Name="Psychic" Value="10"/>

        <!-- bad traits -->
        <Trait Name="Dependent" Value="-50"/> <!-- needs others to do the job -->
        <Trait Name="Clumsy" Value="-20"/> <!-- spills food and breaks things often -->
        <Trait Name="Aggressive" Value="-20"/> <!-- gets mad easy -->
        <Trait Name="Nervous" Value="-30"/> <!-- don't like to be around people -->
        <Trait Name="Meek" Value="-20"/>
    </Performance>

    <Gains XP="10" Skill="3">
        <Skill Name="Herbalism" Weight="2"/>
        <Skill Name="Farming" Weight="2"/>
        <Stat Name="Constitution" Weight="1"/>

        <GainTrait Trait="Farmer">
            <TraitChangeAmount Value="40" Chance="50">
                <TraitChangeCondition What="JobPerformance" Lower="100" Upper="200" />
            </TraitChangeAmount>
            <Text>Regularly tending the herbs has turned ${name} into a Farmer.</Text>
        </GainTrait>

        <LoseTrait Trait="City Girl">
            <TraitChangeAmount Value="15" Chance="33" />
            <Text>Having spent so much time in the herb garden,
                ${name} no longer feels like a City Girl.</Text>
        </LoseTrait>
    </Gains>

    <Config DefaultImage="Farm" BaseWages="20"/>

    <Messages>
        <Message Name="work">
            <Text>${name} worked as a gardener on the farm.</Text>
        </Message>
        <Message Name="refuse">
            <Text>${name} refused to work in the garden during the ${shift} shift.</Text>
        </Message>
        <Message Name="repair">
            <Text>She spent some of her time repairing the Farm's equipment instead of gardening.</Text>
        </Message>
        <Message Name="produce">
            <Text>${name} was able to harvest:</Text>
        </Message>
        <Include>DefaultPerformanceMessages.xml</Include>
    </Messages>
</Job>
