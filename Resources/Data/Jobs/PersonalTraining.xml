<!DOCTYPE Job SYSTEM "job.dtd">
<Job ShortName="PTrn" Title="Trainee">
    <Description>
        You will oversee her training personally.
    </Description>

    <Config Shift="full">
        <Enjoyment BaseEnjoyment="-10" />
        <Obedience Difficulty="30" Dignity="60" Fear="10" />
    </Config>

    <Messages>
        <Message Name="work">
            <Text>You oversee ${name}'s training.</Text>
        </Message>
        <Message Name="refuse">
            <Text>${name} refused to work during the ${shift} shift.</Text>
        </Message>
    </Messages>
</Job>
