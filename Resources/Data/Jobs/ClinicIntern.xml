<!DOCTYPE Job SYSTEM "job.dtd">
<Job ShortName="Ntrn">
    <Description>
        Will train in how to be a nurse.
    </Description>

    <Config>
        <Filter>ClinicStaff</Filter>
        <Enjoyment BaseEnjoyment="-5" PrimaryAction="Medical" SecondaryAction="Service"/>
        <Obedience Difficulty="25" Dignity="70" />
    </Config>

    <Requirements>
        <Condition ForbiddenTrait="AIDS">
            Health laws prohibit anyone with AIDS from working in the Medical profession.
        </Condition>
    </Requirements>

    <Performance>
        <!-- unused: Intern job is a training job -->
    </Performance>

    <Gains XP="5" Skill="0">
    </Gains>

    <Messages>
        <Message Name="work">
            <Text>${name} trains in the Medical field.</Text>
        </Message>
        <Message Name="refuse">
            <Text>${name} refuses to work as an Intern in the Hospital.</Text>
        </Message>
    </Messages>
</Job>
