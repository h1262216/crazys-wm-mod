<!DOCTYPE Job SYSTEM "job.dtd">
<Job ShortName="Jwlr">
    <Description>
        She will make jewelery.
    </Description>

    <Config DefaultImage="Craft" BaseWages="40">
        <Filter>ArenaProducers</Filter>
        <Enjoyment PrimaryAction="Crafting"/>
        <Obedience Difficulty="15" Fear="0" Dignity="90"/>
    </Config>

    <Performance>
        <Factor Skill="Crafting" Weight="4"/>
        <Factor Skill="Magic" Weight="1"/>
        <Factor Stat="Confidence" Weight="1"/>
        <Factor Stat="Intelligence" Weight="1"/>
        <Factor Stat="Agility" Weight="1"/>
    </Performance>

    <Gains XP="10" Skill="3">
        <Skill Name="Crafting" Weight="4"/>
        <Skill Name="Magic" Weight="1"/>
        <Stat Name="Confidence" Weight="1"/>
        <Stat Name="Intelligence" Weight="1"/>
        <Stat Name="Agility" Weight="1"/>

        <LoseTrait Trait="Clumsy">
            <TraitChangeAmount Value="50" Chance="50" />
            <Text>Working on such small items has made ${name} less Clumsy.</Text>
        </LoseTrait>

        <GainTrait Trait="Sharp-Eyed">
            <TraitChangeAmount Value="40" Chance="50">
                <TraitChangeCondition What="JobPerformance" Lower="150" Upper="200" />
            </TraitChangeAmount>
            <Text>Working on such small items has made ${name} rather Sharp-Eyed.</Text>
        </GainTrait>
    </Gains>

    <Messages>
        <Message Name="work">
            <Text>${name} worked as a Jeweler at the arena.</Text>
        </Message>
        <Message Name="refuse">
            <Text>${name} refused to work as a jeweler during the ${shift} shift.</Text>
        </Message>
        <Message Name="repair">
            <Text>She spent some of her time repairing the Arena's equipment instead of making new stuff.</Text>
        </Message>
        <Message Name="produce">
            <Text>${name} crafted:</Text>
        </Message>
        <Include>DefaultPerformanceMessages.xml</Include>
        <Include>DefaultEnjoyMessages.xml</Include>
    </Messages>
</Job>
