<!DOCTYPE Job SYSTEM "job.dtd">
<Job ShortName="MkPt">
    <Description>
        She will make various potions.
    </Description>

    <Performance>
        <Factor Skill="Brewing" Weight="3"/>
        <Factor Skill="Herbalism" Weight="3"/>
        <Factor Skill="Service" Weight="2"/>
        <Factor Skill="Magic" Weight="2"/>
        <Factor Skill="Cooking" Weight="2"/>

        <!-- good traits -->
        <Trait Name="Quick Learner" Value="5"/>
        <Trait Name="Psychic" Value="10"/>
        <Trait Name="Nerd" Value="10"/>

        <!-- bad traits -->
        <Trait Name="Dependent" Value="-50"/> <!-- needs others to do the job -->
        <Trait Name="Clumsy" Value="-20"/> <!-- spills food and breaks things often -->
        <Trait Name="Aggressive" Value="-20"/> <!-- gets mad easy -->
        <Trait Name="Nervous" Value="-30"/> <!-- don't like to be around people -->
        <Trait Name="Meek" Value="-20"/>
    </Performance>

    <Gains XP="10" Skill="3">
        <Skill Name="Brewing" Weight="3" />
        <Skill Name="Herbalism" Weight="3"/>
        <Skill Name="Cooking" Weight="1"/>
        <Skill Name="Magic" Weight="1"/>

        <LoseTrait Trait="Clumsy">
            <TraitChangeAmount Value="30" Chance="50" />
            <Text>It took her spilling hundreds of vials, and just as many reprimands,
                but ${name} has finally stopped being so Clumsy.</Text>
        </LoseTrait>

        <GainTrait Trait="Mixologist">
            <TraitChangeAmount Value="50" Chance="50">
                <TraitChangeCondition What="JobPerformance" Lower="150" Upper="200"/>
            </TraitChangeAmount>
            <Text>${name} has become an expert at Mixing potions.</Text>
        </GainTrait>
    </Gains>

    <Messages>
        <Message Name="work">
            <Text>${name} worked as a potions maker on the farm.</Text>
        </Message>
        <Message Name="refuse">
            <Text>${name} refused to brew potions during the ${shift} shift.</Text>
        </Message>
        <Message Name="repair">
            <Text>She spent some of her time repairing the Farm's equipment instead of making new stuff.</Text>
        </Message>
        <Message Name="produce">
            <Text>${name} made:</Text>
        </Message>
        <Include>DefaultPerformanceMessages.xml</Include>
    </Messages>
</Job>
