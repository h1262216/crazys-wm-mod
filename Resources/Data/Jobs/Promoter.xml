<!DOCTYPE Job SYSTEM "job.dtd">
<Job ShortName="Prmt" Title="Promoter">
    <Description>
        She advertises the movies.
    </Description>

    <Config DefaultImage="Profile"  BaseWages="50">
        <Enjoyment PrimaryAction="Social" SecondaryAction="Mental" BaseEnjoyment="0" />
        <Obedience Difficulty="15" Fear="5" Dignity="90" />
    </Config>

    <Performance>
        <Factor Stat="Charisma" Weight="4"/>
        <Factor Stat="Beauty" Weight="1"/>
        <Factor Stat="Intelligence" Weight="1" Max="50"/>
        <Factor Stat="Confidence" Weight="1" Max="50"/>
        <Factor Skill="Performance" Weight="1" Max="50"/>
        <Factor Skill="Service" Weight="1" Max="50"/>

        <!-- useful traits -->
        <Trait Name="Actress" Value="10"/>
        <Trait Name="Charismatic" Value="10"/>
        <Trait Name="Charming" Value="10"/>
        <Trait Name="Cool Person" Value="10"/>
        <Trait Name="Elegant" Value="5"/>
        <Trait Name="Exhibitionist" Value="15"/>   <!-- Advertising topless -->
        <Trait Name="Fearless" Value="5"/>
        <Trait Name="Flexible" Value="5"/>
        <Trait Name="Former Official" Value="10"/>
        <Trait Name="Great Arse" Value="5"/>
        <Trait Name="Great Figure" Value="5"/>
        <Trait Name="Idol" Value="20"/>
        <Trait Name="Natural Pheromones" Value="10"/>
        <Trait Name="Optimist" Value="5"/>
        <Trait Name="Porn Star" Value="20"/>
        <Trait Name="Priestess" Value="10"/>   <!-- used to preaching to the masses -->
        <Trait Name="Princess" Value="5"/>
        <Trait Name="Psychic" Value="10"/>
        <Trait Name="Queen" Value="10"/>
        <Trait Name="Quick Learner" Value="5"/>
        <Trait Name="Sexy Air" Value="10"/>
        <Trait Name="Shape Shifter" Value="20"/>   <!-- she can show what is playing -->
        <Trait Name="Singer" Value="10"/>
        <Trait Name="Slut" Value="10"/>
        <Trait Name="Your Daughter" Value="20"/>
        <Trait Name="Your Wife" Value="20"/>

        <!-- unhelpful traits -->
        <Trait Name="Alcoholic" Value="-15"/>
        <Trait Name="Aggressive" Value="-10"/> <!-- gets mad easy and may attack people -->
        <Trait Name="Blind" Value="-20"/>
        <Trait Name="Broken Will" Value="-50"/>
        <Trait Name="Clumsy" Value="-5"/>
        <Trait Name="Deaf" Value="-10"/>
        <Trait Name="Dependent" Value="-50"/> <!-- needs others to do the job -->
        <Trait Name="Emprisoned Customer" Value="-30"/>    <!-- she may be warning the other customers -->
        <Trait Name="Fairy Dust Addict" Value="-15"/>
        <Trait Name="Horrific Scars" Value="-10"/>
        <Trait Name="Kidnapped" Value="-40"/>  <!-- she may try to run away or get help -->
        <Trait Name="Malformed" Value="-20"/>
        <Trait Name="Meek" Value="-10"/>
        <Trait Name="Mute" Value="-10"/>
        <Trait Name="Nervous" Value="-5"/>
        <Trait Name="No Arms" Value="-40"/>
        <Trait Name="No Feet" Value="-40"/>
        <Trait Name="No Hands" Value="-30"/>
        <Trait Name="No Legs" Value="-40"/>
        <Trait Name="One Arm" Value="-10"/>
        <Trait Name="One Foot" Value="-15"/>
        <Trait Name="One Hand" Value="-5"/>
        <Trait Name="One Leg" Value="-20"/>
        <Trait Name="Pessimist" Value="-5"/>
        <Trait Name="Retarded" Value="-20"/>
        <Trait Name="Skeleton" Value="-50"/>
        <Trait Name="Shy" Value="-10"/>
        <Trait Name="Slow Learner" Value="-5"/>
        <Trait Name="Smoker" Value="-10"/> <!-- would need smoke breaks -->
        <Trait Name="Shroud Addict" Value="-15"/>
        <Trait Name="Viras Blood Addict" Value="-15"/>
        <Trait Name="Zombie" Value="-50"/>
    </Performance>

    <Gains XP="15" Skill="3">
        <Stat Name="Charisma" Weight="1" />
        <Skill Name="Service" Weight="1" Max="50"/>

        <GainTrait Trait="Charismatic">
            <TraitChangeAmount Value="40" Chance="50">
                <TraitChangeCondition What="Confidence" Lower="20" Upper="50"/>
                <TraitChangeCondition What="Performance" Lower="20" Upper="50"/>
                <TraitChangeCondition What="Charisma" Lower="10" Upper="40"/>
            </TraitChangeAmount>
            <Text>Promoting movies on a daily basis has made ${name} more Charismatic.</Text>
        </GainTrait>

        <GainTrait Trait="Charming">
            <TraitChangeAmount Value="40" Chance="50">
                <TraitChangeCondition What="Confidence" Lower="20" Upper="40"/>
                <TraitChangeCondition What="Performance" Lower="20" Upper="40"/>
                <TraitChangeCondition What="Charisma" Lower="10" Upper="30"/>
            </TraitChangeAmount>
            <Text>Promoting movies on a daily basis has made ${name} more Charming.</Text>
        </GainTrait>
    </Gains>

    <Messages>
    <Message Name="refuse">
        <Text>${name} refused to work as a promoter today.</Text>
    </Message>
    <Message Name="work">
        <Text>${name} worked to promote the sales of the studio's films.</Text>
    </Message>
    </Messages>
</Job>