<!DOCTYPE Job SYSTEM "job.dtd">
<Job ShortName="Adv">
    <Description>
        She will advertise the building's features in the city.
    </Description>

    <Performance>
        <Factor Stat="Beauty" Weight="3"/>
        <Factor Stat="Confidence" Weight="3"/>
        <Factor Stat="Intelligence" Weight="3"/>
        <Factor Skill="Service" Weight="3"/>

        <Factor Skill="Performance" Weight="4"/>
        <Factor Stat="Charisma" Weight="4"/>
        <Factor Stat="Fame" Weight="4"/>

        <Mod>work.advertising</Mod>
    </Performance>

    <Gains XP="10" Skill="3">
        <Skill Name="Performance" Weight="1" Max="50"/>
        <Stat Name="Charisma" Weight="1" Max="50"/>
        <Skill Name="Service" Weight="1" Max="50"/>
        <Stat Name="Confidence" Weight="1" Max="50"/>

        <GainTrait Trait="Charismatic">
            <TraitChangeAmount Value="40" Chance="50">
                <TraitChangeCondition What="Confidence" Lower="20" Upper="50"/>
                <TraitChangeCondition What="Performance" Lower="20" Upper="50"/>
                <TraitChangeCondition What="Charisma" Lower="10" Upper="40"/>
            </TraitChangeAmount>
            <Text>Advertising on a daily basis has made ${name} more Charismatic.</Text>
        </GainTrait>

        <GainTrait Trait="Charming">
            <TraitChangeAmount Value="40" Chance="50">
                <TraitChangeCondition What="Confidence" Lower="20" Upper="40"/>
                <TraitChangeCondition What="Performance" Lower="20" Upper="40"/>
                <TraitChangeCondition What="Charisma" Lower="10" Upper="30"/>
            </TraitChangeAmount>
            <Text>Advertising on a daily basis has made ${name} more Charming.</Text>
        </GainTrait>

        <LoseTrait Trait="Nervous">
            <TraitChangeAmount Value="60" Chance="50">
                <TraitChangeCondition What="Confidence" Lower="10" Upper="40"/>
            </TraitChangeAmount>
            <Text>${name} seems to finally be getting over her shyness. She's not always so Nervous anymore.</Text>
        </LoseTrait>

        <LoseTrait Trait="Shy">
            <TraitChangeAmount Value="40" Chance="50">
                <TraitChangeCondition What="Confidence" Lower="0" Upper="33"/>
            </TraitChangeAmount>
            <Text>${name} seems to finally be getting over her Shyness.</Text>
        </LoseTrait>

        <GainTrait Trait="Exhibitionist">
            <TraitChangeAmount Value="50" Chance="33">
                <TraitChangeCondition What="Lust" Lower="75" Upper="100"/>
                <TraitChangeCondition What="Strip" Lower="50" Upper="70"/>
            </TraitChangeAmount>
            <Text>${name} has become quite the Exhibitionist, she seems to prefer Advertising topless whenever she can.</Text>
        </GainTrait>
    </Gains>

    <Messages>
        <Message Name="work">
            <Text>${name} is assigned to advertise the brothel.</Text>
        </Message>
        <Message Name="refuse">
            <Text>${name} refused to advertise the brothel to${shift}.</Text>
        </Message>
    </Messages>
</Job>
