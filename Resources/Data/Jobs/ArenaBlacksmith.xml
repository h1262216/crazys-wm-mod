<!DOCTYPE Job SYSTEM "job.dtd">
<Job ShortName="Bksm">
    <Description>
        She will make weapons and armor.
    </Description>

    <Performance>
        <Factor Skill="Crafting" Weight="2"/>
        <Factor Stat="Strength" Weight="2"/>
        <Factor Skill="Combat" Weight="1"/>
        <Factor Skill="Magic" Weight="1"/>
        <Factor Stat="Intelligence" Weight="1"/>
        <Factor Stat="Constitution" Weight="1"/>

        <Trait Name="Clumsy" Value="-10" />
    </Performance>

    <Config DefaultImage="Craft" />

    <Gains XP="10" Skill="3">
        <Skill Name="Crafting" Weight="2" />
        <Stat Name="Strength" Weight="2" />
        <Stat Name="Constitution" Weight="2" />
        <Skill Name="Combat" Weight="1" />
        <Skill Name="Magic" Weight="1" />

        <GainTrait Trait="Tough">
            <TraitChangeAmount Value="50" Chance="50">
                <TraitChangeCondition What="Strength" Lower="25" Upper="50" />
            </TraitChangeAmount>
            <Text>Working in the heat of the forge has made ${name} rather Tough.</Text>
        </GainTrait>

        <GainTrait Trait="Manly">
            <TraitChangeAmount Value="33" Chance="50">
                <TraitChangeCondition What="Strength" Lower="60" Upper="100" />
            </TraitChangeAmount>
            <Text>The grueling work in the forge has made ${name} appear rather Manly.</Text>
        </GainTrait>

        <LoseTrait Trait="Fragile">
            <TraitChangeAmount Value="100" Chance="50" />
            <Text>Working in the heat of the forge has made ${name} lose her Fragility.</Text>
        </LoseTrait>
    </Gains>

    <Messages>
        <Message Name="work">
            <Text>${name} worked as a blacksmith at the arena.</Text>
        </Message>
        <Message Name="refuse">
            <Text>${name} refused to work in the smithy during the ${shift} shift.</Text>
        </Message>
        <Message Name="repair">
            <Text>She spent some of her time repairing the Arena's equipment instead of making new stuff.</Text>
        </Message>
        <Message Name="produce">
            <Text>${name} made:</Text>
        </Message>
        <Include>DefaultPerformanceMessages.xml</Include>
    </Messages>
</Job>
