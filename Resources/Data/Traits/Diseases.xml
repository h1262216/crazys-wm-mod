<?xml version="1.0" ?>
<!DOCTYPE Traits SYSTEM "traits.dtd">
<Traits>
    <Default>
        <Setting Name="default:chance:inherent" Value="0" />
        <Setting Name="inherit:chance:from_acquired" Value="50" />
    </Default>

    <Trait Name="AIDS">
        <description>She has AIDS, a fatal disease. If you can't track down a cure, she'll likely die. (disease)</description>
        <Modifiers>
            <Modifier Name="tag:disease" Value="1" />
        </Modifiers>
        <Properties>
            <Setting Name="random:chance" Value="1" />
            <Setting Name="inherit:chance:from_acquired" Value="80" />
        </Properties>
    </Trait>


    <Trait Name="Chlamydia">
        <description>This nasty disease will cause pain for both her and the customers during urination. (disease)</description>
        <Modifiers>
            <Modifier Name="tag:disease" Value="1" />
            <Modifier Name="enjoy:Fucking" Value="-25" />
        </Modifiers>
        <Properties>
            <Setting Name="random:chance" Value="2" />
        </Properties>
    </Trait>


    <Trait Name="Herpes">
        <description>She has contracted herpes. Customers will not be happy if she gives it to them. (disease)</description>
        <Modifiers>
            <Modifier Name="tag:disease" Value="1" />
        </Modifiers>
        <Properties>
            <Setting Name="random:chance" Value="4" />
        </Properties>
    </Trait>


    <Trait Name="Syphilis">
        <description>This disease can cause death if left untreated. The sores are just the early symptoms. (disease)</description>
        <Modifiers>
            <Modifier Name="tag:disease" Value="1" />
        </Modifiers>
        <Properties>
            <Setting Name="random:chance" Value="3" />
        </Properties>
    </Trait>
</Traits>